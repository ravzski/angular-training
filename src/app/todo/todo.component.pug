.header-container
  .logo

  .header-widget
    .header-search
      input.search-input(type="text", placeholder="Search")
      i.fa.fa-search
    ul.header-notifications
      li.notification-item
        i.fa.fa-bell
      li.notification-item
        i.fa.fa-globe
        span.notification-count 1
      li.notification-item
        i.fa.fa-cog

.sidebar-container
  ul.sidebar-links
    li.user-details.sidebar-item
      img.user-img(src="/assets/pic.png")
      .user-info
        .user-name Hardey
        .user-title Admin

    li.nav-section.sidebar-item
      span Navigation
    li.sidebar-item
      a.sidebar-link(href="#") 
        i.fa.fa-home
        span Dashboard
    li.sidebar-item
      a.sidebar-link(href="#") 
        i.fa.fa-user
        span Profile
    li.sidebar-item.active
      a.sidebar-link(href="#") 
        i.fa.fa-bookmark
        span Todo

