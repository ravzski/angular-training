.container.clearfix
  #people-list.people-list
    thread-list(
      [threads]="newChatRooms",
      [currentThread]="currentThread",
      (updateThread)="updateThread($event)")
    
  .chat
    message-list(
      *ngIf="!!currentThread && !!messages",
      [messages]="messages",
      [currentThread]="currentThread",
      [currentUser]="currentUser")

    message-form(
      [currentUser]="currentUser",
      (addMessage)="addMessage($event)"
    )