.search
  input(type="text",
    placeholder="search",
    [(ngModel)]="query")

  i.fa.fa-search
ul.list
  li.clearfix(*ngFor="let thread of threads",
    (click)="setThread(thread)",
    [ngClass]="getThreadClass(thread)")
    img(src="https://s3-us-west-2.amazonaws.com/s.cdpn.io/195612/chat_avatar_01.jpg" alt="avatar")
    .about
      .name {{thread.name}}
      .status
        i.fa.fa-circle.online
        |  online